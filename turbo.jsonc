{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "enabled": true
  },
  "tasks": {
    "typecheck": {
      "outputLogs": "new-only",
      "dependsOn": ["^typecheck"],
      "inputs": [
        "./src/**",
        "./*.config.*",
        "./tsconfig.json",
        "./package.json"
      ]
    },
    "build": {
      "outputLogs": "new-only",
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "out/**", "target/release/**", "binaries/**"],
      "inputs": [
        "src/**",
        "crates/**",
        "scripts/**",
        "*.config.*",
        "tsconfig.json",
        "Cargo.toml",
        "Cargo.lock",
        "package.json"
      ]
    },
    "core#build": {
      "outputLogs": "new-only",
      "outputs": [
        "target/release/tscanner",
        "target/release/tscanner.exe",
        "target/release/tscanner-server",
        "target/release/tscanner-server.exe"
      ],
      "inputs": [
        "src/**",
        "crates/**",
        "Cargo.toml",
        "Cargo.lock"
      ]
    },
    "tscanner#build": {
      "outputLogs": "new-only",
      "dependsOn": ["core#build"],
      "outputs": ["dist/**", "npm/**"],
      "inputs": [
        "./src/**",
        "./scripts/**",
        "./tsconfig.json",
        "./package.json",
        "../core/target/release/**"
      ]
    },
    "tscanner-vscode#build": {
      "outputLogs": "new-only",
      "dependsOn": ["core#build"],
      "outputs": ["out/**", "dist-dev/**"],
      "inputs": [
        "./src/**",
        "./esbuild.config.ts",
        "./package.json",
        "./scripts/install-local.ts",
        "../core/target/release/**"
      ]
    },
    "format": {
      "outputLogs": "new-only",
      "inputs": ["./src/**", "./crates/**", "./biome.json", "./rustfmt.toml"]
    },
    "lint": {
      "outputLogs": "new-only",
      "inputs": ["./src/**", "./crates/**", "./Cargo.toml", "./biome.json"]
    },
    "lint:fix": {
      "outputLogs": "new-only",
      "inputs": ["./src/**", "./crates/**", "./Cargo.toml", "./biome.json"]
    }
  }
}
