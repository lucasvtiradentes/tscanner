{
  "name": "tscanner",
  "private": true,
  "version": "1.0.0",
  "description": "High-performance TypeScript code quality scanner with custom rule support",
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "prepare": "husky",
    "start": "npm run cli:prod",
    "dev": "npm run cli:dev",
    "cli:dev": "tsx ./packages/cli/src/main.ts",
    "cli:prod": "node ./packages/cli/dist/main.js",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "typecheck": "turbo run typecheck",
    "changeset": "changeset",
    "release": "./scripts/release.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.7",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "tsx": "^4.20.6",
    "turbo": "^2.6.1"
  }
}
