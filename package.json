{
  "name": "tscanner-monorepo",
  "private": true,
  "description": "Code quality scanner for the AI-generated code era",
  "packageManager": "pnpm@10.22.0",
  "scripts": {
    "prepare": "husky",
    "start": "node ./packages/cli/dist/main.js",
    "dev": "tsx ./packages/cli/src/main.ts",
    "build": "turbo run build --summarize",
    "postbuild": "tsx scripts/update-docs/index.ts && tsx scripts/instal-local/install-local-cli.ts && tsx scripts/instal-local/install-local-vscode.ts",
    "lint": "turbo run lint --summarize",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format --summarize",
    "typecheck": "turbo run typecheck --summarize",
    "test": "turbo run test",
    "changeset": "changeset",
    "knip": "knip",
    "clean": "rimraf --glob '**/dist' '**/dist-dev' '**/.turbo' '**/out' '**/node_modules' '**/target'"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.0.0",
    "husky": "^9.1.7",
    "knip": "^5.71.0",
    "lint-staged": "^15.2.11",
    "markdown-helper": "^0.0.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "turbo": "^2.6.1"
  }
}
