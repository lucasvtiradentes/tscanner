{
  "name": "lino",
  "private": true,
  "version": "1.0.0",
  "description": "High-performance TypeScript linting platform with custom rule support",
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "prepare": "husky",
    "build": "turbo run build",
    "build:rust": "turbo run build:rust",
    "build:extension": "turbo run build --filter=lino-vscode",
    "build:rust:all": "./packages/lino-core/scripts/build-binaries.sh",
    "format": "turbo run format",
    "format:ts": "turbo run format:ts",
    "format:rust": "turbo run format:rust"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "turbo": "^2.6.1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json}": ["biome format --write"],
    "packages/lino-core/**/*.rs": ["sh -c 'cd packages/lino-core && cargo fmt'"]
  }
}
