{
  "$schema": "../packages/cli/schema.json",
  "rules": {
    "builtin": {
      "consistent-return": {},
      "max-function-length": {},
      "max-params": {},
      "no-explicit-any": {},
      "no-async-without-await": {},
      "no-console": {"exclude": ["**/scripts/*", ".changeset/commit.js"]},
      "no-constant-condition": {},
      "no-default-export": {"exclude": ["*.config.ts"]},
      "no-duplicate-imports": {},
      "no-dynamic-import": {},
      "no-else-return": {},
      "no-empty-class": {},
      "no-empty-function": {},
      "no-empty-interface": {},
      "no-floating-promises": {},
      "no-forwarded-exports": { "exclude": ["**/index.ts"]},
      "no-implicit-any": {},
      "no-inferrable-types": {},
      "no-nested-require": {},
      "no-nested-ternary": {},
      "no-non-null-assertion": {},
      "no-return-await": {},
      "no-shadow": {},
      "no-single-or-array-union": {},
      "no-todo-comments": {},
      "no-unnecessary-type-assertion": {},
      "no-unreachable-code": {},
      "no-unused-vars": {},
      "no-useless-catch": {},
      "no-var": {},
      "prefer-const": {},
      "prefer-nullish-coalescing": {},
      "prefer-optional-chain": {},
      "prefer-type-over-interface": {}
    },
    "regex": {
      "no-rust-deprecated": {
        "pattern": "allow\\(deprecated\\)",
        "message": "No deprecated methods",
        "include": ["packages/rust-core/**/*.rs"]
      },
      "no-process-env": {
        "pattern": "process\\.env",
        "message": "No process env"
      }
    },
    "script": {
      "action-zod-match": {
        "command": "npx tsx script-rules/action-zod-match.ts",
        "message": "Action inputs must match Zod validation schema",
        "severity": "error",
        "include": ["packages/github-action/action.yml", "packages/github-action/src/core/input-validator.ts"]
      },
      "readme-toc-match": {
        "command": "npx tsx script-rules/readme-toc-match.ts",
        "message": "README TOC must match all document headings",
        "include": ["**/README.md"],
        "exclude": [".changeset/README.md"]
      },
      "config-schema-match": {
        "command": "npx tsx script-rules/config-schema-match.ts",
        "message": "Rust config and TypeScript schema must be in sync",
        "severity": "error",
        "include": ["packages/cli/schema.json", "shared/tscanner-common/src/schemas.ts"]
      },
      "rust-mod-simple": {
        "command": "npx tsx script-rules/rust-mod-simple.ts",
        "message": "mod.rs should only contain module declarations and re-exports",
        "severity": "error",
        "include": ["**/mod.rs"]
      },
      "no-long-files": {
        "command": "npx tsx script-rules/no-long-files.ts",
        "message": "File exceeds 300 lines limit",
        "include": ["packages/**/*.ts", "packages/**/*.rs"]
      }
    }
  },
  "aiRules": {
    "no-dead-code": {
      "prompt": "no-dead-code.md",
      "mode": "content",
      "message": "Dead code detected - remove unused code instead of suppressing warnings",
      "severity": "warning",
      "include": ["packages/rust-core/crates/tscanner_scanner/src/executors/**.rs"]
    },
    // "find-magic-numbers": {
    //   "prompt": "find-magic-numbers.md",
    //   "mode": "paths",
    //   "message": "Magic number should be extracted to a named constant",
    //   "severity": "warning",
    //   "include": ["packages/rust-core/**/*.rs"]
    // },
    "find-enum-candidates": {
      "prompt": "find-enum-candidates.md",
      "mode": "agentic",
      "message": "Type union could be replaced with an enum for better type safety",
      "severity": "warning",
      "include": ["**/*.ts"]
    }
  },
  "files": {
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mjs", "**/*.cjs"],
    "exclude": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      ".git/**",
      ".ignore/**",
      "packages/vscode-extension/dist-dev/**",
      "packages/vscode-extension/out/**",
      "packages/rust-core/crates/tscanner_rules/tests/**",
      ".tscanner/script-rules/**",
      "examples/all-rules/**"
    ]
  },
  "ai": {
    "provider": "claude"
  },
  "codeEditor": {
    "highlightErrors": true,
    "highlightWarnings": true,
    "scanInterval": 0,
    "aiScanInterval": 0
  }
}
