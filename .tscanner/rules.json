{
  "$schema": "../packages/cli/schema.json",
  "builtinRules": {
    "no-var": {},
    "prefer-type-over-interface": { "enabled": false },
    "prefer-interface-over-type": {},
    "no-constant-condition": {},
    "no-duplicate-imports": {},
    "no-unreachable-code": {},
    "no-relative-imports": {},
    "max-function-length": {},
    "no-nested-ternary": {},
    "no-nested-require": {},
    "no-empty-function": {},
    "no-dynamic-import": {},
    "consistent-return": {},
    "no-magic-numbers": {},
    "no-alias-imports": {},
    "no-implicit-any": {},
    "no-unused-vars": {},
    "no-empty-class": {},
    "prefer-const": {},
    "no-any-type": {},
    "no-todo-comments": {},
    "no-console-log": {}
  },
  "customRules": {
    "no-todo-comments2": {
      "type": "regex",
      "pattern": "TODO:",
      "message": "TODO comments should be resolved"
    },
    "no-console-log2": {
      "type": "regex",
      "pattern": "console\\.log\\(",
      "message": "console.log should not be used in production"
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules/**", "**/dist/**", "**/build/**", "**/.git/**"]
}
