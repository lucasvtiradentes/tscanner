{
  "$schema": "../packages/cli/schema.json",
  "builtinRules": {
    "no-var": {},
    "prefer-type-over-interface": {},
    "no-constant-condition": {},
    "no-duplicate-imports": {},
    "no-unreachable-code": {},
    "max-function-length": {},
    "no-nested-ternary": {},
    "no-nested-require": {},
    "no-empty-function": {},
    "no-dynamic-import": {},
    "consistent-return": {},
    "no-alias-imports": {},
    "no-implicit-any": {},
    "no-unused-vars": {},
    "no-empty-class": {},
    "prefer-const": {},
    "no-any-type": {},
    "no-todo-comments": {},
    "no-console-log": {}
  },
  "customRules": {
    "no-debug-log-calls": {
      "type": "regex",
      "pattern": "logger\\.debug",
      "message": "logger calls should be removed before production"
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules/**", "**/dist/**", "**/build/**", "**/.git/**"]
}
