{
  "customRules": {
    "package-json-check": {
      "type": "script",
      "script": "package-json-check.sh",
      "message": "package.json violates best practices",
      "severity": "warning",
      "include": ["**/package.json"],
      "exclude": ["**/node_modules/**"],
      "mode": "batch",
      "timeout": 10000
    }
  }
}
