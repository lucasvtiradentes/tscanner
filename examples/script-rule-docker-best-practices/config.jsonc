{
  "customRules": {
    "dockerfile-best-practices": {
      "type": "script",
      "script": "dockerfile-check.py",
      "message": "Dockerfile violates best practices",
      "severity": "warning",
      "include": ["**/Dockerfile", "**/Dockerfile.*"],
      "mode": "batch",
      "timeout": 10
    }
  }
}
