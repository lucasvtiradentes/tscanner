{
  "name": "core",
  "private": true,
  "description": "Code quality scanner for the AI-generated code era",
  "scripts": {
    "build": "cargo build --release",
    "postbuild": "cargo run --bin generate_schema",
    "lint": "cargo clippy -- -D warnings && cargo fmt -- --check",
    "lint:fix": "cargo clippy --fix --allow-dirty --allow-staged -- -D warnings",
    "format": "cargo fmt",
    "typecheck": "cargo check",
    "test": "cargo test -p core --test spec_tests"
  }
}
