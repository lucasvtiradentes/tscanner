{
  "name": "tscanner-vscode",
  "private": true,
  "displayName": "TScanner",
  "description": "Code quality scanner for the AI-generated code era",
  "version": "0.0.16",
  "publisher": "lucasvtiradentes",
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/tscanner"
  },
  "bugs": {
    "url": "https://github.com/lucasvtiradentes/tscanner/issues"
  },
  "homepage": "https://github.com/lucasvtiradentes/tscanner#readme",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Formatters",
    "Testing"
  ],
  "keywords": [
    "typescript",
    "linter",
    "code-quality",
    "scanner",
    "static-analysis",
    "eslint",
    "biome",
    "rust",
    "tsx",
    "javascript",
    "custom-rules",
    "ai-validation",
    "git-integration",
    "branch-scanning",
    "code-review",
    "diagnostics"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "scripts": {
    "build": "tsx esbuild.config.ts",
    "postbuild": "tsx scripts/install-local.ts",
    "lint": "biome check src",
    "lint:fix": "biome check --fix --unsafe src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "pnpm run build",
    "vscode:package": "vsce package --no-dependencies",
    "vscode:publish": "vsce publish --no-dependencies"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tscanner-common": "workspace:*",
    "@types/vscode": "^1.100.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tscanner",
          "title": "tscanner",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "tscanner": [
        {
          "id": "tscannerExplorer",
          "name": "Issues",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "tscannerExplorer",
        "contents": "No issues found.",
        "when": "workbenchState != empty"
      },
      {
        "view": "tscannerExplorer",
        "contents": "Open a folder to start scanning for issues.\n[Open Folder](command:vscode.openFolder)",
        "when": "workbenchState == empty"
      }
    ],
    "commands": [
      {
        "command": "tscanner.findIssue",
        "title": "Scan Workspace",
        "icon": "$(search)"
      },
      {
        "command": "tscanner.refresh",
        "title": "Scan Workspace",
        "icon": "$(refresh)"
      },
      {
        "command": "tscanner.hardScan",
        "title": "tscanner: Hard Scan (Clear Cache & Rescan)",
        "icon": "$(debug-restart)"
      },
      {
        "command": "tscanner.cycleViewModeFileFlatView",
        "title": "Group by file, flat view",
        "icon": "$(list-flat)"
      },
      {
        "command": "tscanner.cycleViewModeFileTreeView",
        "title": "Group by file, tree view",
        "icon": "$(list-tree)"
      },
      {
        "command": "tscanner.cycleViewModeRuleFlatView",
        "title": "Group by rule, flat view",
        "icon": "$(group-by-ref-type)"
      },
      {
        "command": "tscanner.cycleViewModeRuleTreeView",
        "title": "Group by rule, tree view",
        "icon": "$(type-hierarchy)"
      },
      {
        "command": "tscanner.openFile",
        "title": "Open File"
      },
      {
        "command": "tscanner.copyPath",
        "title": "Copy Path",
        "icon": "$(files)"
      },
      {
        "command": "tscanner.copyRelativePath",
        "title": "Copy Relative Path"
      },
      {
        "command": "tscanner.openSettingsMenu",
        "title": "tscanner: Open Settings"
      },
      {
        "command": "tscanner.goToNextIssue",
        "title": "tscanner: Go to Next Issue",
        "icon": "$(arrow-down)"
      },
      {
        "command": "tscanner.goToPreviousIssue",
        "title": "tscanner: Go to Previous Issue",
        "icon": "$(arrow-up)"
      },
      {
        "command": "tscanner.showLogs",
        "title": "tscanner: Show Logs",
        "icon": "$(output)"
      },
      {
        "command": "tscanner.copyRuleIssues",
        "title": "Copy Rule Issues",
        "icon": "$(copy)"
      },
      {
        "command": "tscanner.copyFileIssues",
        "title": "Copy File Issues",
        "icon": "$(copy)"
      },
      {
        "command": "tscanner.copyFolderIssues",
        "title": "Copy Folder Issues",
        "icon": "$(copy)"
      }
    ],
    "keybindings": [
      {
        "command": "tscanner.goToNextIssue",
        "key": "f8",
        "when": "editorTextFocus"
      },
      {
        "command": "tscanner.goToPreviousIssue",
        "key": "shift+f8",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "tscanner.refresh",
          "when": "view == tscannerExplorer && !tscannerSearching",
          "group": "navigation@10"
        },
        {
          "command": "tscanner.cycleViewModeFileFlatView",
          "when": "view == tscannerExplorer && tscannerViewMode == list && tscannerGroupMode == default",
          "group": "navigation@20"
        },
        {
          "command": "tscanner.cycleViewModeFileTreeView",
          "when": "view == tscannerExplorer && tscannerViewMode == tree && tscannerGroupMode == default",
          "group": "navigation@20"
        },
        {
          "command": "tscanner.cycleViewModeRuleFlatView",
          "when": "view == tscannerExplorer && tscannerViewMode == list && tscannerGroupMode == rule",
          "group": "navigation@20"
        },
        {
          "command": "tscanner.cycleViewModeRuleTreeView",
          "when": "view == tscannerExplorer && tscannerViewMode == tree && tscannerGroupMode == rule",
          "group": "navigation@20"
        }
      ],
      "view/item/context": [
        {
          "command": "tscanner.copyPath",
          "when": "view == tscannerExplorer && viewItem == tscannerNodeFile",
          "group": "navigation"
        },
        {
          "command": "tscanner.copyPath",
          "when": "view == tscannerExplorer && viewItem == tscannerNodeFile",
          "group": "inline"
        },
        {
          "command": "tscanner.copyRelativePath",
          "when": "view == tscannerExplorer && viewItem == tscannerNodeFile",
          "group": "9_cutcopypaste"
        },
        {
          "command": "tscanner.copyRuleIssues",
          "when": "view == tscannerExplorer && viewItem == TscannerNodeRuleGroup",
          "group": "inline"
        },
        {
          "command": "tscanner.copyFileIssues",
          "when": "view == tscannerExplorer && viewItem == TscannerNodeFile && tscannerGroupMode == default",
          "group": "inline"
        },
        {
          "command": "tscanner.copyFolderIssues",
          "when": "view == tscannerExplorer && viewItem == TscannerNodeFolder && tscannerGroupMode == default",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "tscanner.openFile",
          "when": "false"
        },
        {
          "command": "tscanner.copyPath",
          "when": "false"
        },
        {
          "command": "tscanner.copyRelativePath",
          "when": "false"
        },
        {
          "command": "tscanner.refresh",
          "when": "false"
        },
        {
          "command": "tscanner.openSettingsMenu",
          "when": "false"
        },
        {
          "command": "tscanner.copyRuleIssues",
          "when": "false"
        },
        {
          "command": "tscanner.copyFileIssues",
          "when": "false"
        },
        {
          "command": "tscanner.copyFolderIssues",
          "when": "false"
        }
      ]
    }
  }
}
