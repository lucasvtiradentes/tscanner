{
  "name": "cscan-vscode",
  "displayName": "Code Scan (cscan)",
  "description": "High-performance TypeScript code quality scanner with custom rules, Git integration, and instant LLM feedback",
  "version": "1.0.2",
  "publisher": "lucasvtiradentes",
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/cscan"
  },
  "bugs": {
    "url": "https://github.com/lucasvtiradentes/cscan/issues"
  },
  "homepage": "https://github.com/lucasvtiradentes/cscan#readme",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "code-quality",
    "scanner",
    "typescript",
    "tsx",
    "ast",
    "rust",
    "performance",
    "git-integration",
    "llm",
    "custom-rules"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "build": "tsx esbuild.config.ts",
    "postbuild": "tsx scripts/copy-binaries.ts && tsx scripts/install-local.ts",
    "dev": "tsx esbuild.config.ts --watch",
    "postinstall": "tsx scripts/setup-rust-binary.ts",
    "lint": "biome check src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "pnpm run build",
    "vscode:package": "vsce package --no-dependencies",
    "vscode:publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.100.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "cscan",
          "title": "cscan",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "cscan": [
        {
          "id": "cscanExplorer",
          "name": "Issues",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "cscanExplorer",
        "contents": "No issues found.",
        "when": "workbenchState != empty"
      },
      {
        "view": "cscanExplorer",
        "contents": "Open a folder to start scanning for issues.\n[Open Folder](command:vscode.openFolder)",
        "when": "workbenchState == empty"
      }
    ],
    "commands": [
      {
        "command": "cscan.findIssue",
        "title": "Scan Workspace",
        "icon": "$(search)"
      },
      {
        "command": "cscan.refresh",
        "title": "Scan Workspace",
        "icon": "$(refresh)"
      },
      {
        "command": "cscan.hardScan",
        "title": "cscan: Hard Scan (Clear Cache & Rescan)",
        "icon": "$(debug-restart)"
      },
      {
        "command": "cscan.setGroupByDefault",
        "title": "No Grouping",
        "icon": "$(close-all)"
      },
      {
        "command": "cscan.setGroupByRule",
        "title": "Group by Rule",
        "icon": "$(group-by-ref-type)"
      },
      {
        "command": "cscan.setListView",
        "title": "View as List",
        "icon": "$(list-flat)",
        "enablement": "cscanViewMode == tree"
      },
      {
        "command": "cscan.setTreeView",
        "title": "View as Tree",
        "icon": "$(list-tree)",
        "enablement": "cscanViewMode == list"
      },
      {
        "command": "cscan.openFile",
        "title": "Open File"
      },
      {
        "command": "cscan.copyPath",
        "title": "Copy Path",
        "icon": "$(files)"
      },
      {
        "command": "cscan.copyRelativePath",
        "title": "Copy Relative Path"
      },
      {
        "command": "cscan.openSettingsMenu",
        "title": "cscan: Open Settings"
      },
      {
        "command": "cscan.goToNextIssue",
        "title": "cscan: Go to Next Issue",
        "icon": "$(arrow-down)"
      },
      {
        "command": "cscan.goToPreviousIssue",
        "title": "cscan: Go to Previous Issue",
        "icon": "$(arrow-up)"
      },
      {
        "command": "cscan.showLogs",
        "title": "cscan: Show Logs",
        "icon": "$(output)"
      }
    ],
    "keybindings": [
      {
        "command": "cscan.goToNextIssue",
        "key": "f8",
        "when": "editorTextFocus"
      },
      {
        "command": "cscan.goToPreviousIssue",
        "key": "shift+f8",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "cscan.refresh",
          "when": "view == cscanExplorer && !cscanSearching",
          "group": "navigation@10"
        },
        {
          "command": "cscan.setGroupByDefault",
          "when": "view == cscanExplorer && cscanGroupMode == rule",
          "group": "navigation@20"
        },
        {
          "command": "cscan.setGroupByRule",
          "when": "view == cscanExplorer && cscanGroupMode == default",
          "group": "navigation@20"
        },
        {
          "command": "cscan.setListView",
          "when": "view == cscanExplorer && cscanViewMode == tree",
          "group": "navigation@30"
        },
        {
          "command": "cscan.setTreeView",
          "when": "view == cscanExplorer && cscanViewMode == list",
          "group": "navigation@30"
        }
      ],
      "view/item/context": [
        {
          "command": "cscan.copyPath",
          "when": "view == cscanExplorer && viewItem == cscanNodeFile",
          "group": "navigation"
        },
        {
          "command": "cscan.copyPath",
          "when": "view == cscanExplorer && viewItem == cscanNodeFile",
          "group": "inline"
        },
        {
          "command": "cscan.copyRelativePath",
          "when": "view == cscanExplorer && viewItem == cscanNodeFile",
          "group": "9_cutcopypaste"
        }
      ],
      "commandPalette": [
        {
          "command": "cscan.openFile",
          "when": "false"
        },
        {
          "command": "cscan.copyPath",
          "when": "false"
        },
        {
          "command": "cscan.copyRelativePath",
          "when": "false"
        },
        {
          "command": "cscan.refresh",
          "when": "false"
        },
        {
          "command": "cscan.openSettingsMenu",
          "when": "false"
        }
      ]
    }
  }
}
