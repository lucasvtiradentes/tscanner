{
  "name": "tscanner-vscode",
  "private": true,
  "displayName": "tscanner",
  "description": "High-performance TypeScript code quality scanner with custom rules, Git integration, and instant LLM feedback",
  "version": "0.0.4",
  "publisher": "lucasvtiradentes",
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/tscanner"
  },
  "bugs": {
    "url": "https://github.com/lucasvtiradentes/tscanner/issues"
  },
  "homepage": "https://github.com/lucasvtiradentes/tscanner#readme",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "keywords": [
    "code-quality",
    "scanner",
    "typescript",
    "tsx",
    "ast",
    "rust",
    "performance",
    "git-integration",
    "llm",
    "custom-rules"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "build": "tsx esbuild.config.ts",
    "postbuild": "tsx scripts/install-local.ts",
    "lint": "biome check src",
    "lint:fix": "biome check --fix --unsafe src",
    "format": "biome format --write src",
    "typecheck": "tsc --noEmit",
    "vscode:prepublish": "pnpm run build",
    "vscode:package": "vsce package --no-dependencies",
    "vscode:publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.100.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tscanner",
          "title": "tscanner",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "tscanner": [
        {
          "id": "tscannerExplorer",
          "name": "Issues",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "tscannerExplorer",
        "contents": "No issues found.",
        "when": "workbenchState != empty"
      },
      {
        "view": "tscannerExplorer",
        "contents": "Open a folder to start scanning for issues.\n[Open Folder](command:vscode.openFolder)",
        "when": "workbenchState == empty"
      }
    ],
    "commands": [
      {
        "command": "tscanner.findIssue",
        "title": "Scan Workspace",
        "icon": "$(search)"
      },
      {
        "command": "tscanner.refresh",
        "title": "Scan Workspace",
        "icon": "$(refresh)"
      },
      {
        "command": "tscanner.hardScan",
        "title": "tscanner: Hard Scan (Clear Cache & Rescan)",
        "icon": "$(debug-restart)"
      },
      {
        "command": "tscanner.setGroupByDefault",
        "title": "No Grouping",
        "icon": "$(close-all)"
      },
      {
        "command": "tscanner.setGroupByRule",
        "title": "Group by Rule",
        "icon": "$(group-by-ref-type)"
      },
      {
        "command": "tscanner.setListView",
        "title": "View as List",
        "icon": "$(list-flat)",
        "enablement": "tscannerViewMode == tree"
      },
      {
        "command": "tscanner.setTreeView",
        "title": "View as Tree",
        "icon": "$(list-tree)",
        "enablement": "tscannerViewMode == list"
      },
      {
        "command": "tscanner.openFile",
        "title": "Open File"
      },
      {
        "command": "tscanner.copyPath",
        "title": "Copy Path",
        "icon": "$(files)"
      },
      {
        "command": "tscanner.copyRelativePath",
        "title": "Copy Relative Path"
      },
      {
        "command": "tscanner.openSettingsMenu",
        "title": "tscanner: Open Settings"
      },
      {
        "command": "tscanner.goToNextIssue",
        "title": "tscanner: Go to Next Issue",
        "icon": "$(arrow-down)"
      },
      {
        "command": "tscanner.goToPreviousIssue",
        "title": "tscanner: Go to Previous Issue",
        "icon": "$(arrow-up)"
      },
      {
        "command": "tscanner.showLogs",
        "title": "tscanner: Show Logs",
        "icon": "$(output)"
      }
    ],
    "keybindings": [
      {
        "command": "tscanner.goToNextIssue",
        "key": "f8",
        "when": "editorTextFocus"
      },
      {
        "command": "tscanner.goToPreviousIssue",
        "key": "shift+f8",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "tscanner.refresh",
          "when": "view == tscannerExplorer && !tscannerSearching",
          "group": "navigation@10"
        },
        {
          "command": "tscanner.setGroupByDefault",
          "when": "view == tscannerExplorer && tscannerGroupMode == rule",
          "group": "navigation@20"
        },
        {
          "command": "tscanner.setGroupByRule",
          "when": "view == tscannerExplorer && tscannerGroupMode == default",
          "group": "navigation@20"
        },
        {
          "command": "tscanner.setListView",
          "when": "view == tscannerExplorer && tscannerViewMode == tree",
          "group": "navigation@30"
        },
        {
          "command": "tscanner.setTreeView",
          "when": "view == tscannerExplorer && tscannerViewMode == list",
          "group": "navigation@30"
        }
      ],
      "view/item/context": [
        {
          "command": "tscanner.copyPath",
          "when": "view == tscannerExplorer && viewItem == tscannerNodeFile",
          "group": "navigation"
        },
        {
          "command": "tscanner.copyPath",
          "when": "view == tscannerExplorer && viewItem == tscannerNodeFile",
          "group": "inline"
        },
        {
          "command": "tscanner.copyRelativePath",
          "when": "view == tscannerExplorer && viewItem == tscannerNodeFile",
          "group": "9_cutcopypaste"
        }
      ],
      "commandPalette": [
        {
          "command": "tscanner.openFile",
          "when": "false"
        },
        {
          "command": "tscanner.copyPath",
          "when": "false"
        },
        {
          "command": "tscanner.copyRelativePath",
          "when": "false"
        },
        {
          "command": "tscanner.refresh",
          "when": "false"
        },
        {
          "command": "tscanner.openSettingsMenu",
          "when": "false"
        }
      ]
    }
  },
  "dependencies": {
    "zod": "^4.1.12"
  }
}
