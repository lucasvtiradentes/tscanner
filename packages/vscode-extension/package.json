{
  "name": "lino-vscode",
  "displayName": "Lino",
  "description": "Code linting and quality checker for TypeScript projects",
  "version": "1.0.0",
  "publisher": "lucasvtiradentes",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/lino"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": ["Linters"],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "bundle": "npm run script:setup-rust-binary && npm run bundle:ci",
    "bundle:ci": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "build": "pnpm run bundle",
    "postbuild": "npm run script:install-locally",
    "postinstall": "npm run script:setup-rust-binary",
    "script:setup-rust-binary": "tsx extension-scripts/setup-rust-binary.ts",
    "script:install-locally": "tsx extension-scripts/install-local.ts"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.100.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.0"
  },
  "activationEvents": ["onStartupFinished"],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "lino",
          "title": "Lino",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "lino": [
        {
          "id": "linoExplorer",
          "name": "Issues",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "linoExplorer",
        "contents": "No issues found.",
        "when": "workbenchState != empty"
      },
      {
        "view": "linoExplorer",
        "contents": "Open a folder to start scanning for issues.\n[Open Folder](command:vscode.openFolder)",
        "when": "workbenchState == empty"
      }
    ],
    "commands": [
      {
        "command": "lino.findIssue",
        "title": "Scan Workspace",
        "icon": "$(search)"
      },
      {
        "command": "lino.refresh",
        "title": "Scan Workspace",
        "icon": "$(refresh)"
      },
      {
        "command": "lino.hardScan",
        "title": "Lino: Hard Scan (Clear Cache & Rescan)",
        "icon": "$(debug-restart)"
      },
      {
        "command": "lino.setGroupByDefault",
        "title": "No Grouping",
        "icon": "$(close-all)"
      },
      {
        "command": "lino.setGroupByRule",
        "title": "Group by Rule",
        "icon": "$(group-by-ref-type)"
      },
      {
        "command": "lino.setListView",
        "title": "View as List",
        "icon": "$(list-flat)",
        "enablement": "linoViewMode == tree"
      },
      {
        "command": "lino.setTreeView",
        "title": "View as Tree",
        "icon": "$(list-tree)",
        "enablement": "linoViewMode == list"
      },
      {
        "command": "lino.openFile",
        "title": "Open File"
      },
      {
        "command": "lino.copyPath",
        "title": "Copy Path",
        "icon": "$(files)"
      },
      {
        "command": "lino.copyRelativePath",
        "title": "Copy Relative Path"
      },
      {
        "command": "lino.openSettingsMenu",
        "title": "Lino: Open Settings"
      },
      {
        "command": "lino.goToNextIssue",
        "title": "Lino: Go to Next Issue",
        "icon": "$(arrow-down)"
      },
      {
        "command": "lino.goToPreviousIssue",
        "title": "Lino: Go to Previous Issue",
        "icon": "$(arrow-up)"
      },
      {
        "command": "lino.showLogs",
        "title": "Lino: Show Logs",
        "icon": "$(output)"
      }
    ],
    "keybindings": [
      {
        "command": "lino.goToNextIssue",
        "key": "f8",
        "when": "editorTextFocus"
      },
      {
        "command": "lino.goToPreviousIssue",
        "key": "shift+f8",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "lino.refresh",
          "when": "view == linoExplorer && !linoSearching",
          "group": "navigation@10"
        },
        {
          "command": "lino.setGroupByDefault",
          "when": "view == linoExplorer && linoGroupMode == rule",
          "group": "navigation@20"
        },
        {
          "command": "lino.setGroupByRule",
          "when": "view == linoExplorer && linoGroupMode == default",
          "group": "navigation@20"
        },
        {
          "command": "lino.setListView",
          "when": "view == linoExplorer && linoViewMode == tree",
          "group": "navigation@30"
        },
        {
          "command": "lino.setTreeView",
          "when": "view == linoExplorer && linoViewMode == list",
          "group": "navigation@30"
        }
      ],
      "view/item/context": [
        {
          "command": "lino.copyPath",
          "when": "view == linoExplorer && viewItem == LinoNodeFile",
          "group": "navigation"
        },
        {
          "command": "lino.copyPath",
          "when": "view == linoExplorer && viewItem == LinoNodeFile",
          "group": "inline"
        },
        {
          "command": "lino.copyRelativePath",
          "when": "view == linoExplorer && viewItem == LinoNodeFile",
          "group": "9_cutcopypaste"
        }
      ],
      "commandPalette": [
        {
          "command": "lino.openFile",
          "when": "false"
        },
        {
          "command": "lino.copyPath",
          "when": "false"
        },
        {
          "command": "lino.copyRelativePath",
          "when": "false"
        },
        {
          "command": "lino.refresh",
          "when": "false"
        },
        {
          "command": "lino.openSettingsMenu",
          "when": "false"
        }
      ]
    }
  }
}
