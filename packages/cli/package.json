{
  "name": "cscanner",
  "version": "2.0.3",
  "description": "High-performance TypeScript/TSX code quality scanner - CLI",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/cscanner.git",
    "directory": "packages/cli"
  },
  "bin": {
    "cscanner": "./dist/cscanner.js"
  },
  "files": [
    "dist",
    "postinstall.cjs"
  ],
  "optionalDependencies": {
    "cscanner-bin-linux-x64": "workspace:*",
    "cscanner-bin-linux-arm64": "workspace:*",
    "cscanner-bin-darwin-x64": "workspace:*",
    "cscanner-bin-darwin-arm64": "workspace:*",
    "cscanner-bin-win32-x64": "workspace:*"
  },
  "scripts": {
    "postinstall": "node postinstall.cjs",
    "build": "tsc && ./scripts/copy-binaries.sh",
    "start": "node ./dist/cscanner.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src scripts/*.ts",
    "format": "biome format --write src scripts/*.ts",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.0"
  }
}
