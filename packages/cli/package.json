{
  "name": "tscanner",
  "version": "0.0.19",
  "description": "Code quality scanner for the AI-generated code era",
  "license": "MIT",
  "author": "lucasvtiradentes",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasvtiradentes/tscanner.git"
  },
  "homepage": "https://github.com/lucasvtiradentes/tscanner#readme",
  "bugs": {
    "url": "https://github.com/lucasvtiradentes/tscanner/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "typescript",
    "linter",
    "code-quality",
    "scanner",
    "static-analysis",
    "ast",
    "rust",
    "swc",
    "eslint-alternative",
    "biome-alternative",
    "custom-rules",
    "regex-rules",
    "ai-validation",
    "ci-cd",
    "pre-commit",
    "git-hooks",
    "tsx",
    "javascript",
    "code-review"
  ],
  "bin": {
    "tscanner": "./dist/main.js"
  },
  "files": [
    "dist",
    "schema.json",
    "postinstall.js"
  ],
  "scripts": {
    "postinstall": "node postinstall.js",
    "build": "tsup",
    "postbuild": "tsx scripts/install-local.ts",
    "start": "node ./dist/main.js",
    "dev": "tsx ./src/main.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check --fix --unsafe src",
    "format": "biome format --write src scripts/*.ts",
    "prepublishOnly": "pnpm run build",
    "script:fix-packages": "tsx scripts/generate-packages.ts"
  },
  "optionalDependencies": {
    "@tscanner/cli-darwin-arm64": "0.0.19",
    "@tscanner/cli-darwin-x64": "0.0.19",
    "@tscanner/cli-linux-arm64": "0.0.19",
    "@tscanner/cli-linux-x64": "0.0.19",
    "@tscanner/cli-win32-x64": "0.0.19"
  },
  "dependencies": {
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tscanner-common": "workspace:*",
    "tsup": "^8.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.0",
    "zod-to-json-schema": "^3.25.0"
  }
}
