{
  "rules": [
    {
      "name": "find-enum-candidates",
      "kind": "ai",
      "category": "refactoring",
      "description": "Find string literal unions that could be replaced with enums",
      "file": "prompt.md"
    },
    {
      "name": "no-long-files",
      "kind": "script",
      "category": "code-quality",
      "description": "Enforce maximum lines per file limit",
      "file": "script.ts"
    },
    {
      "name": "no-empty-files",
      "kind": "script",
      "category": "code-quality",
      "description": "Enforce minimum lines per file",
      "file": "script.py"
    },
    {
      "name": "no-fixme-comments",
      "kind": "script",
      "category": "code-quality",
      "description": "Disallow FIXME/XXX comments in code",
      "file": "script.rs"
    },
    {
      "name": "no-process-env",
      "kind": "regex",
      "category": "security",
      "description": "Disallow direct process.env access"
    }
  ]
}
