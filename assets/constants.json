{
  "packageName": "tscanner",
  "packageDisplayName": "TScanner",
  "packageDescription": "Code quality scanner for the AI-generated code era",
  "configDirName": ".tscanner",
  "configFileName": "config.jsonc",
  "defaultTargetBranch": "origin/main",
  "logBasename": "tscannerlogs",
  "logTimezoneOffsetHours": -3,
  "ignoreComment": "tscanner-ignore",
  "ignoreNextLineComment": "tscanner-ignore-next-line",
  "defaults": {
    "codeEditor": {
      "highlightErrors": true,
      "highlightWarnings": true,
      "highlightInfos": true,
      "highlightHints": true,
      "scanInterval": 0,
      "aiScanInterval": 0
    },
    "directories": {
      "scriptRules": "script-rules",
      "aiRules": "ai-rules"
    },
    "examples": {
      "scriptRule": "example-no-debug-comments.ts",
      "aiRule": "example-find-complexity.md"
    }
  },
  "display": {
    "icons": {
      "builtin": "‚óè",
      "regex": "‚óã",
      "script": "‚ñ∂",
      "ai": "‚ú¶",
      "error": "‚úñ",
      "warning": "‚ö†",
      "info": "‚Ñπ",
      "hint": "üí°",
      "progress": "‚ßó",
      "success": "‚úì",
      "skipped": "‚äò"
    }
  },
  "extensions": {
    "javascript": ["ts", "tsx", "js", "jsx", "mjs", "cjs", "mts", "cts"]
  },
  "cache": {
    "dirName": "tscanner"
  },
  "ai": {
    "tempDir": "tscanner-ai-prompts",
    "placeholders": {
      "files": "{{FILES}}",
      "content": "{{CONTENT}}",
      "options": "{{OPTIONS}}"
    },
    "providers": {
      "claude": {
        "command": "claude",
        "args": ["-p", "--output-format", "text", "--model", "haiku"]
      },
      "gemini": {
        "command": "gemini",
        "args": ["-o", "text"]
      }
    }
  },
  "urls": {
    "rulesBase": "https://github.com/lucasvtiradentes/tscanner/blob/main/packages/rust-core/crates/tscanner_rules/src/builtin"
  },
  "vscodeExtension": {
    "timeouts": {
      "binaryLookupMs": 5000,
      "versionCheckMs": 5000
    },
    "delays": {
      "extensionStartupMs": 2000,
      "treeRevealMs": 100
    },
    "intervals": {
      "descriptionUpdateMs": 60000
    },
    "statusBar": {
      "priority": 100,
      "icons": {
        "configured": "$(shield)",
        "unconfigured": "$(warning)"
      }
    },
    "paths": {
      "bunGlobalModules": ".bun/install/global/node_modules",
      "devBinaryRelative": "packages/rust-core/target/release"
    },
    "lsp": {
      "clientId": "tscanner",
      "methods": {
        "scan": "tscanner/scan",
        "scanFile": "tscanner/scanFile",
        "scanContent": "tscanner/scanContent",
        "clearCache": "tscanner/clearCache",
        "getRulesMetadata": "tscanner/getRulesMetadata",
        "formatResults": "tscanner/formatResults",
        "aiProgress": "tscanner/aiProgress"
      }
    }
  }
}
